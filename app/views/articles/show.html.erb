<h1 id="listing-articles">Showing Article details</h1>
<br>
<div class="p-5 mb-4 bg-light rounded-3">

    <p><strong>Title:</strong> <%= @article.title %></p>
    <p><strong>Description:</strong> <%= @article.description %></p>


    <%= link_to 'Back to Articles', articles_path, class: 'btn btn-secondary' %> 
    <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-primary' %>  
    <%= link_to 'Delete', article_path(@article), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
</div>