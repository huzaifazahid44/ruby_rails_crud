<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8">Users</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @users.each do |user| %>
            <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
                <h2 class="text-xl font-bold mb-2"><%= user.name %></h2>
                <p class="text-gray-600 mb-1"><%= user.email %></p>
                
                <div class="flex gap-2">
                    <%= link_to "View", user_path(user), class: "btn btn-primary" %>
                    <% if logged_in? %>
                      <%if current_user == user %>
                            <%= link_to "Edit", edit_user_path(user), class: "btn btn-secondary " %>
                        <% end %>
                        <% if current_user.admin? %>
                            <%= button_to "Delete", user_path(user), method: :delete, class: "btn btn-danger", form_class: "d-inline", form: { data: { turbo_confirm: "Are you sure?" }, onsubmit: "return confirm('Are you sure?')" } %>
                        <% end %>
                    <% end %>
                 </div>
            </div>
        <% end %>
    </div>
</div>