<h1 id="listing-articles">Log In</h1>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-body p-4">
          <%= form_with scope: :session, url: login_path, data: { turbo: false }, class: "needs-validation" do |form| %>
        
            <div class="mb-3">
              <%= form.label :email, "Email", class: "form-label fw-bold" %>
              <%= form.email_field :email, class: "form-control", placeholder: "Enter your email address" %>
            </div>
            
            <div class="mb-3">
              <%= form.label :password, "Password", class: "form-label fw-bold" %>
              <%= form.password_field :password, class: "form-control", placeholder: "Enter your password" %>
            </div>

            <div class="d-grid gap-2">
              <%= form.submit "Log In", class: "btn btn-primary btn-lg" %>
            </div>
            
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>    