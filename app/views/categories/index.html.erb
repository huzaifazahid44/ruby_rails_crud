<h1 id="Categories">Listing Categories</h1>

   <div class="container-fluid px-4">
        <div class="d-flex overflow-auto pb-3" style="gap: 1.5rem;">
            <% @categories.each do |category| %>
                <div class="card flex-shrink-0" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title"><%= category.name %></h5>
                        <div class="d-flex gap-2">
                            <%= link_to 'Show', category_path(category), class: 'btn btn-sm btn-primary' %>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>


    <div class="flickr_pagination mt-4">
        <%= will_paginate @categories, :container => false %>
    </div>
